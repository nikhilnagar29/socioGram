            <script>
            document.addEventListener('DOMContentLoaded', () => {
                const slideButton = document.getElementById('slideButton');
                const slideSidebar = document.getElementById('slideSidebar');
                
                // Function to toggle sidebar visibility
                function toggleSidebar() {
                    slideSidebar.classList.toggle('translate-x-full');
                }
                
                // Toggle sidebar when button is clicked
                slideButton.addEventListener('click', toggleSidebar);
                
                // Close sidebar when clicking outside of it (only on small screens)
                document.addEventListener('click', function(event) {
                    if (window.innerWidth < 1024) {
                        if (!slideSidebar.contains(event.target) && !slideButton.contains(event.target)) {
                            slideSidebar.classList.add('translate-x-full');
                        }
                    }
                });
            
                // Check on resize if sidebar should be visible or not
                window.addEventListener('resize', function() {
                    if (window.innerWidth >= 1024) {
                        slideSidebar.classList.remove('translate-x-full');
                        slideButton.classList.add('hidden');
                    } else {
                        slideSidebar.classList.add('translate-x-full');
                        slideButton.classList.remove('hidden');
                    }
                });
            });
            </script>
            
        
