    <style>
        body, input, button {
            font-family: 'Roboto', sans-serif;
        }
        @keyframes fade-in {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fade-in 0.5s ease-out;
        }
        @media (max-width: 768px) {
            .div3 { 
                display: none; 
            }
        }
        .hidden {
            display: none;
        }

        .like-button {
            background-color: #007bff44;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            border-radius: 9999px;
        }

        .like-button.liked {
            background-color: rgba(40, 167, 69, 0.2); /* Transparent green (80%) if liked */
        }

        .like-button span.like-count {
            font-weight: bold;
            margin-right: 8px;
        }

        #div2Set {
            margin-right: 0px; /* Default margin (for small screens, 50% of the width) */
            }

            @media (min-width: 768px) {
            #div2Set {
                margin-right: 20px; /* 3/4 screen */
            }
            }

            @media (min-width: 1024px) {
            #div2Set {
                margin-right: 40px; /* Larger screens */
            }
            }

            @media (min-width: 1440px) {
            #div2Set {
                margin-right: 70px; /* Full screens */
            }
            }




        /* This would need JavaScript to dynamically update as you scroll */
    </style>
</head>
