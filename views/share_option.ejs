<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shared Page - SocioGram</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" class="rounded-full" type="image/x-icon" href="/image/favicon.ico">
    <style>
        body, input, button {
            font-family: 'Roboto', sans-serif;
        }
        @keyframes fade-in {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fade-in 0.5s ease-out;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-800 via-gray-900 to-black text-white flex justify-center items-center min-h-screen">

    <% var ImageName = "https://img.freepik.com/premium-photo/black-logo-with-silver-logo-that-says-silver-it_905510-10632.jpg" %>

    <div class="w-full bg-black max-w-5xl p-8 shadow-2xl rounded-2xl animate-fade-in">
        <div class="flex justify-between mb-6">
            <a href="/home" class="text-xl text-blue-500 hover:text-blue-400 transition-all duration-300">
                Back to Home
            </a>
        </div>
        <div class="flex justify-between mb-6">
            <div class="flex-grow flex justify-center">
                <a href="/" class="block">
                    <img class="w-[130px] h-[130px] rounded-full border-blue-600 hover:shadow-lg hover:scale-105 transition-all duration-300" 
                        src="<%=ImageName%>" 
                        alt="Logo">
                </a>
            </div>
            <div class="w-0">&nbsp;</div> <!-- This empty div helps in keeping the space for layout -->
        </div>

        <div class="text-center mb-6">
            <p class="text-lg mb-4">Share SocioGram:</p>
            
            <div class="relative mb-4 w-1/2 mx-auto">
                <input type="text" value="localhost:3000/" id="linkToCopy" 
                    class="w-full p-3 bg-gray-800 text-white border border-blue-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all ease-in-out duration-200 pr-20" 
                    readonly>
                <button onclick="copyLink()"
                    class="absolute top-0 right-0 h-full px-4 bg-blue-600 text-white font-bold rounded-r-lg shadow-lg hover:bg-blue-700 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50">
                    Copy
                </button>
            </div>

            <form class="space-y-4">
                <h6>or</h6>
                <div class="flex flex-col items-center">
                    <input type="email" id="friend-email" 
                        class="w-1/2 p-3 bg-gray-800 text-white border border-blue-600 rounded-lg placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all ease-in-out duration-200" 
                        placeholder="Friend's Email Address" required>
                </div>
                <div class="flex justify-center">
                    <button type="button" onclick="sendLink()"
                        class="w-1/2 px-8 py-3 bg-blue-600 text-white font-bold rounded-full shadow-lg hover:bg-blue-700 active:bg-blue-800 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50">
                        Send
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function copyLink() {
            var copyText = document.getElementById("linkToCopy");
            copyText.select();
            copyText.setSelectionRange(0, 99999); // For mobile devices
            document.execCommand("copy");
            alert("Link copied to clipboard!");
        }

        function sendLink() {
            var email = document.getElementById("friend-email").value;
            if (email) {
                // Here you would typically send an email using AJAX or redirect to a server-side endpoint
                alert("Link sent to " + email + "!");
            } else {
                alert("Please enter an email address.");
            }
        }
    </script>

</body>
</html>