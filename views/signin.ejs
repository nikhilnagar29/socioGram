<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="icon" class="rounded-full" type="image/x-icon" href="/image/favicon.ico">    
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        body, input, button {
            font-family: 'Roboto', sans-serif;
        }

        @keyframes fade-in {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fade-in 0.5s ease-out;
        }

        @keyframes fade-out {
            from { opacity: 1; }
            to { opacity: 0; }
        }
        .animate-fade-out {
            animation: fade-out 0.5s ease-out forwards;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-800 via-gray-900 to-black text-white flex justify-center items-center min-h-screen">

    <% var ImageName = "https://img.freepik.com/premium-photo/black-logo-with-silver-logo-that-says-silver-it_905510-10632.jpg" %>

    <!-- Flash Message (error/success) -->
    <% if (typeof message === 'string' && message.trim().length > 0) { %>
        <div id="flash-message" 
             class="fixed top-4 left-1/2 transform -translate-x-1/2 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg flex items-center space-x-2 animate-fade-in">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1 4h.01M12 8h.01M21 12c0-4.97-4.03-9-9-9S3 7.03 3 12s4.03 9 9 9 9-4.03 9-9z" />
            </svg>
            <span><%= message %></span>
        </div>
    <% } %>

    <div class="w-full bg-black max-w-5xl p-8 shadow-2xl rounded-2xl animate-fade-in">
        <div class="flex justify-center mb-6">
            <a href="/" class="block">
                <img class="w-40 h-40 rounded-full border-blue-600 hover:shadow-lg hover:scale-105 transition-all duration-300" 
                    src="<%=ImageName%>" 
                    alt="Profile Image">
            </a>
        </div>

        <div class="text-center text-white mb-6">
            <h3 class="text-xl font-bold mb-2">Sign In</h3>
            <p class="text-sm text-gray-400">Welcome back! Please enter your details.</p>
        </div>

        <!-- Sign In Form -->
        <form action="/log/in" method="post" class="space-y-4">
            <div class="flex flex-col items-center">
                <input type="email" id="email" 
                    class="w-1/2 p-4 bg-gray-800 text-white border border-blue-600 rounded-lg placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all ease-in-out duration-200" 
                    placeholder="Email" name="email" >
            </div>
            <div class="flex flex-col items-center">
                <input type="password" id="password" 
                    class="w-1/2 p-4 bg-gray-800 text-white border border-blue-600 rounded-lg placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all ease-in-out duration-200" 
                    placeholder="Password" name="password" >
            </div>
            <div class="flex justify-center">
                <button type="submit" 
                    class="w-1/2 px-8 py-3 bg-blue-600 text-white font-bold rounded-full shadow-lg hover:bg-blue-700 active:bg-blue-800 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50">
                    Sign In
                </button>
            </div>
        </form>

        <!-- <div class="text-center mt-4 text-gray-400">
            <a href="#" class="text-blue-400 hover:text-blue-300">Forgot password?</a>
        </div> -->
    </div>

    <script>
        // Auto close the flash message after 4 seconds
        setTimeout(() => {
            const flashMessage = document.getElementById('flash-message');
            if (flashMessage) {
                flashMessage.classList.add('animate-fade-out');
                setTimeout(() => flashMessage.remove(), 500); // Remove it from the DOM after fade-out
            }
        }, 4000);
    </script>

</body>
</html>
